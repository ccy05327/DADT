<!-- Question 2: Mortality by Age Group in Regions -->
<section>
    <h2>2. Mortality by Age Group in Regions</h2>
    <div>This bar chart allows you to explore mortality rates by age group across regions.</div>
    <div>Select an age group and highlight a region to compare.</div>

    <!-- Dropdown for selecting region to highlight -->
    <label for="regionSelectQ2">Select a Region to Highlight:</label>
    <select id="regionSelectQ2">
        <option value="" disabled selected>Select a region</option>
        <% regions.forEach(region => { %>
            <!-- Populate region options dynamically from the regions array -->
            <option value="<%= region.RegionName %>">
                <%= region.RegionName %>
            </option>
        <% }); %>
    </select>

    <!-- Dropdown for selecting age group -->
    <label for="ageGroupSelect">Select Age Group:</label>
    <select id="ageGroupSelect">
        <option value="" disabled selected>Select an age group</option>
        <option value="0-9">0-9</option>
        <option value="10-19">10-19</option>
        <option value="20-29">20-29</option>
        <option value="30-39">30-39</option>
        <option value="40-49">40-49</option>
        <option value="50-59">50-59</option>
        <option value="60-69">60-69</option>
        <option value="70-79">70-79</option>
        <option value="80+">80+</option>
    </select>

    <!-- Button to trigger data display -->
    <button id="showDataBtnQ2">Show Data</button>

    <!-- Canvas for rendering the mortality chart -->
    <canvas id="deathRateChartQ2" width="400" height="200"></canvas>

    <!-- Message to show if no data is available -->
    <div id="noDataMessage" style="display: none; color: red; text-align: center;">
        No data from the selected properties
    </div>
</section>
